apiVersion: monitoring.coreos.com/v1
kind: PrometheusRule
metadata:
  name: items-app-alerts
  namespace: monitoring
spec:
  groups:
    - name: items-app.rules
      rules:
        - alert: HighCPUUsage
          expr: sum(rate(container_cpu_usage_seconds_total[5m])) by (pod) > 0.7
          for: 5m
          labels:
            severity: critical
          annotations:
            summary: "High CPU usage on {{ $labels.pod }}"
            description: "Pod {{ $labels.pod }} is using more than 70% CPU"

